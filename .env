# Solomon Microservices Environment Variables
# Copy this file to .env and modify as needed

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672/

# Queue Names
RABBITMQ_IP_QUEUE=ip_queue
RABBITMQ_SCAN_RESULT_QUEUE=scan_result_queue
RABBITMQ_ENRICHMENT_QUEUE=enrichment_queue
RABBITMQ_SERVICE_ANALYSIS_QUEUE=service_analysis_queue

# Server Configuration
SERVER_HOST=0.0.0.0
IP_GENERATOR_PORT=8080
PORT_SCANNER_PORT=8081

# Logging
LOG_LEVEL=info

# Port Scanner Configuration
SCAN_TIMEOUT=30s
BANNER_TIMEOUT=10s
CONCURRENCY=50
ZGRAB_CONCURRENCY=10

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16

# Development
DEBUG=false 